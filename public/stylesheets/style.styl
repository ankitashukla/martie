@font-face
  font-family 'Oxygen'
  font-style normal
  font-weight 300
  src local('Oxygen Light'), local('Oxygen-Light'), url('/fonts/oxygen-light.woff') format('woff')

@font-face
  font-family 'Oxygen'
  font-style normal
  font-weight 400
  src local('Oxygen'), local('Oxygen-Regular'), url('/fonts/oxygen.woff') format('woff')

@font-face
  font-family 'Oxygen'
  font-style normal
  font-weight 700
  src local('Oxygen Bold'), local('Oxygen-Bold'), url('/fonts/oxygen-bold.woff') format('woff')

*
  border 0
  padding 0
  font-family 'Oxygen'

.pure-g [class *= "pure-u"]
  font-family 'Oxygen'
  font-weight 100

.pure-g-r [class *= "pure-u"]
  font-family 'Oxygen'
  font-weight 100

button
  font-family 'Oxygen'
  font-weight 100

input
  font-family 'Oxygen'
  font-weight 100

.content
  background #EEE
  width 60%
  margin auto
  border 1px solid #EEE
  -webkit-box-shadow 0px 2px 5px rgba(0, 0, 0, 0.1)
  -moz-box-shadow 0px 2px 5px rgba(0, 0, 0, 0.1)
  box-shadow 0px 2px 5px rgba(0, 0, 0, 0.1)

#navbar
  height 60px
  border-bottom 1px solid #EEE
  a
    &:hover
      background transparent
      color #555

#topbar-logo-div
  padding 5px 50px 5px 30px
  font-size 25px
  border-right 1px solid #EEE
  #logo-image
    height 20px
    margin-right 5px

#topbar-url
  color black
  font-weight bold
  margin-left 50px

#header
  width 100%
  
#header
  width 100%
  height 200px
  background-size cover
  background-position center
  color white
  position relative
  #party-name
    padding-top 40px
    font-size 25px
  .header-text
    margin-left 270px
    font-weight 100
    padding-top 10px
  #search-div
    height 50px
    label
      cursor pointer
      position absolute
      margin-top 65px
      margin-left 15px
      img
        height 20px
    #search-input
      height 50px
      background rgba(255,255,255,0.3)
      border-radius 0
      border none
      box-shadow none
      outline none
      padding-left 50px
      margin-top 50px
      font-size 20px
      color white
      &:focus
        border none
        box-shadow none
      &::-webkit-input-placeholder
        color white

#main
  background white
  min-height 600px
  width 73%
  ul
    margin 45px 0 0 45px
    padding 0
    li.track-div
      opacity 0.8
      cursor pointer
      &:hover
        opacity 1
      min-height 200px
      width 18%
      list-style none
      display inline-block
      .artwork
        height 7.5em
        width 7.5em
        background url('/images/album.jpg')
        background-position center
        background-size cover
      .song-meta
        font-size 12px
        color #555
        .name
          font-weight bold
          white-space nowrap

#right-sidebar
  width 24%
  padding 10px
  float right
  color #555
  h2
    color black
    font-size 15px
    font-weight 100
    border-bottom 1px solid #AAA
    padding-bottom 15px
    margin-right 30px
  ul
    margin 0
    padding 0
    li
      margin-top 10px
      list-style none
      overflow hidden
      .cancel
        float right
        margin-right 30px
        margin-top 5px
        opacity 0.6
        cursor pointer
        img
          height 12px
        &:hover
          opacity 1
      span
        font-size 12px
      .name
        font-weight bold

#home
  background white
  form
    padding 100px
    text-align center
    input
      border-radius 0
      border 1px solid #555
      box-shadow none
      outline none
      height 50px
      font-size 20px
      &:focus
        border 1px solid #555

#footer
  background white
  padding 15px
  font-size 10px
  a
    text-decoration none
    color black
    border-bottom 1px solid black